# Production Environment Variables - SECURE VERSION
# This file should NEVER be committed to Git!
# Deploy this directly to the server

# Supabase Configuration (These are OK to be public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# Server-side secrets (NEVER use NEXT_PUBLIC_ prefix!)
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
DATABASE_URL=postgresql://postgres:secure-password@postgres:5432/postgres

# Email Configuration
EMAIL_USER=info@viktoria-wertheim.de
EMAIL_PASS=your-secure-email-password
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587

# Admin Configuration (Server-side only!)
ADMIN_EMAILS=admin@viktoria-wertheim.de,vorstand@viktoria-wertheim.de

# Security Keys (Generate new ones!)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_SECRET
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_SECRET
ENCRYPTION_KEY=CHANGE_THIS_TO_YET_ANOTHER_SECRET

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://viktoria-wertheim.de

# Security Settings
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000
CORS_ORIGIN=https://viktoria-wertheim.de
TRUSTED_HOSTS=viktoria-wertheim.de,www.viktoria-wertheim.de