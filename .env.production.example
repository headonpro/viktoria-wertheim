# Production Environment Variables
# Copy this to .env.production and fill in your values

# Supabase Production (auf deinem VPS)
NEXT_PUBLIC_SUPABASE_URL=https://your-domain.com/api
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# Database
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/postgres

# Application
NEXT_PUBLIC_APP_NAME=SV Viktoria Wertheim
NEXT_PUBLIC_APP_URL=https://viktoria-wertheim.de
NODE_ENV=production

# Optional: Service Role Key for admin operations
SUPABASE_SERVICE_KEY=your-service-role-key